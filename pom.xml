<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.lukaspradel</groupId>
    <artifactId>steam-web-api</artifactId>
    <version>1.9.2</version>
    <packaging>jar</packaging>
    <name>Steam Web API</name>
    <description>A library to provide access to the data available from Valve's Steam API</description>
    <url>https://github.com/lpradel/steam-web-api-java</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>11</java.version>
        <maven.version>3.6.0</maven.version>

        <!-- Plugin versions -->
        <maven-compiler-plugin.version>3.13.0</maven-compiler-plugin.version>
        <maven-resources-plugin.version>3.3.1</maven-resources-plugin.version>
        <maven-surefire-plugin.version>3.5.2</maven-surefire-plugin.version>
        <maven-enforcer-plugin.version>3.5.0</maven-enforcer-plugin.version>
        <maven-javadoc-plugin.version>3.11.2</maven-javadoc-plugin.version>
        <maven-jar-plugin.version>3.4.2</maven-jar-plugin.version>
        <maven-source-plugin.version>3.3.1</maven-source-plugin.version>
        <maven-gpg-plugin.version>3.2.7</maven-gpg-plugin.version>
        <nexus-staging-maven-plugin.version>1.7.0</nexus-staging-maven-plugin.version>
        <jacoco-maven-plugin.version>0.8.12</jacoco-maven-plugin.version>
        <jsonschema2pojo-maven-plugin.version>1.2.2</jsonschema2pojo-maven-plugin.version>

        <!-- Dependencies versions -->
        <jackson.version>2.18.2</jackson.version>

        <!-- Test dependencies versions -->
        <testng.version>7.10.2</testng.version>
        <mockito.version>5.16.0</mockito.version>
    </properties>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/lpradel/steam-web-api-java</url>
        <connection>scm:git:git://github.com/lpradel/steam-web-api-java.git</connection>
        <developerConnection>>scm:git:git@github.com:lpradel/steam-web-api-java.git</developerConnection>
    </scm>

    <developers>
        <developer>
            <id>lpradel</id>
            <name>Lukas Pradel</name>
            <email>lukas@lukaspradel.com</email>
            <url>https://github.com/lpradel</url>
        </developer>
    </developers>

    <distributionManagement>
        <snapshotRepository>
            <id>oss-sonatype-nexus</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>oss-sonatype-nexus</id>
            <name>Nexus Release Repository</name>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <release>${java.version}</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven-resources-plugin.version}</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven-surefire-plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>${maven-enforcer-plugin.version}</version>
                <executions>
                    <execution>
                        <id>enforce-maven</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>${java.version}</version>
                                </requireJavaVersion>
                                <requireMavenVersion>
                                    <version>${maven.version}</version>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco-maven-plugin.version}</version>
                <configuration>
                    <excludes>
                        <exclude>com/lukaspradel/steamapi/data/json/**/*.class</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jsonschema2pojo</groupId>
                <artifactId>jsonschema2pojo-maven-plugin</artifactId>
                <version>${jsonschema2pojo-maven-plugin.version}</version>
                <configuration>
                    <sourceType>jsonschema</sourceType>
                    <outputEncoding>${project.build.sourceEncoding}</outputEncoding>
                    <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
                    <includeGeneratedAnnotation>false</includeGeneratedAnnotation>
                    <annotationStyle>jackson2</annotationStyle>
                    <generateBuilders>true</generateBuilders>
                    <initializeCollections>true</initializeCollections>
                    <useLongIntegers>true</useLongIntegers>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-getnewsforapp</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getnewsforapp</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getnewsforapp</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getglobalachievementpercentagesforapp</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getglobalachievementpercentagesforapp</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getglobalachievementpercentagesforapp</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getglobalstatsforgame</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getglobalstatsforgame</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getglobalstatsforgame</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getplayersummaries</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getplayersummaries</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getplayersummaries</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getfriendlist</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getfriendlist</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getfriendlist</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getplayerachievements</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getplayerachievements</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getplayerachievements</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getuserstatsforgame</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getuserstatsforgame</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getuserstatsforgame</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getownedgames</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getownedgames</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getownedgames</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getrecentlyplayedgames</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.getrecentlyplayedgames</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/getrecentlyplayedgames</sourceDirectory>
