                    <execution>
                        <id>generate-isplayingsharedgame</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.isplayingsharedgame</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/isplayingsharedgame</sourceDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-getplayerbans</id>
                        <goals>
