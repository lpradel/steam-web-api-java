                        <configuration>
                            <targetPackage>com.lukaspradel.steamapi.data.json.dota2.getheroes</targetPackage>
                            <sourceDirectory>${basedir}/src/main/resources/com/lukaspradel/steamapi/schema/dota2/getheroes</sourceDirectory>
